# mcp_agent.secrets.yaml.example
# Copy this file to mcp_agent.secrets.yaml and fill in your API keys
# DO NOT COMMIT mcp_agent.secrets.yaml to version control

# OpenAI API configuration
openai:
  api_key: "your-openai-api-key-here"
  organization: "your-org-id"  # Optional

# Anthropic API configuration
anthropic:
  api_key: "your-anthropic-api-key-here"

# GitHub configuration (if using GitHub MCP server)
github:
  token: "your-github-personal-access-token"

# Other optional API keys
brave:
  api_key: "your-brave-search-api-key"  # If using Brave search

# Additional MCP server configurations can go here
# Each server may have its own authentication requirements
